log () { echo -e "$@"; }
err () { >&2 log "ERROR:" "$@"; }


readonly _WORKBENCH_VERSION=0.0.1
readonly _PROG="${0##*/}"


_wb_do_vars () { set | egrep "^WORKBENCH_\w+=" | sort; }


main () {
    case "$1" in
        -V) log "${_WORKBENCH_VERSION}";;
        -E) _wb_do_vars;;
    esac
}


main "$@"
